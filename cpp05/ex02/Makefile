NAME	= No,_you_need_form_28B,_not_28C...
CC		= c++
FLAGS	= -Wall -Wextra -Werror -std=c++98
OBJS	= $(SECS:.cpp=.o)
SRCS	= main.cpp\
		  Bureaucrat.cpp\
		  Form.cpp\
		  PresidentialPardonForm.cpp\
		  RobotomyRequestForm.cpp\
		  ShrubberyCreationForm.cpp\


all: $(NAME)

$(NAME): $(SRCS)
	 $(CC) $(FLAGS) $(SRCS) -o $(NAME)

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re